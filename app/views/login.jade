form.form-horizontal(name="loginForm",novalidate)

    .modal-header
        h3 请登录!

    .modal-body
        .form-group
            label.col-sm-2(for="username") 用 户 名
            .col-sm-9
                input.form-control(name="name",ng-model="user.name", required)
            span.col-sm-1(ng-class="{valid:loginForm.name.$valid,invalid:!(loginForm.name.$valid)}") &#10004;
        .form-group
            label.col-sm-2(for="password") 密    码
            .col-sm-9
                input.form-control(name="password",ng-model="user.password", required)
            span.col-sm-1(ng-class="{valid:loginForm.password.$valid,invalid:!(loginForm.password.$valid)}") &#10004;

    .modal-footer
        button.btn.btn-primary(ng-disabled="!loginForm.$valid",ng-click="ok()") OK
        button.btn.btn-warning(ng-click="cancel()") Cancel

